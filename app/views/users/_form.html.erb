<%= form_with(model:user, local: true) do |form| %>
<div class="field">
  <%= form.label :email%>
  <%= form.text_field :email%>
</div>

<div class="field">
  <%= form.label :password%>
  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation %>

</div>


<div class="action">
  <%=form.submit "Submit", data: { confirm: "Are you sure?"} %>
</div>
<% end %>